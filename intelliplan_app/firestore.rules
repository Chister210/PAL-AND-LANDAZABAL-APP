rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Helper function to check if user is an admin
    function isAdmin() {
      return isAuthenticated() && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Users collection - users can read/write their own data and all subcollections
    // Admins can read all user data
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow write: if isOwner(userId);
      allow create: if isAuthenticated() && request.auth.uid == userId;
      
      // Allow access to ALL subcollections under user document
      // Admins can read all subcollections
      match /{subcollection}/{docId} {
        allow read: if isOwner(userId) || isAdmin();
        allow write: if isOwner(userId);
      }
      
      // Nested subcollections (like gamification/profile)
      // Admins can read all nested subcollections
      match /{subcollection}/{docId}/{nestedCollection}/{nestedDocId} {
        allow read: if isOwner(userId) || isAdmin();
        allow write: if isOwner(userId);
      }
    }
    
    // Top-level Tasks collection - users can manage their own tasks
    // Admins can read all tasks
    match /tasks/{taskId} {
      // Allow read for own tasks OR team tasks where user is a team member OR admin
      allow read: if isAuthenticated() || isAdmin();
      allow write: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // Top-level Subjects collection
    // Admins can read all subjects
    match /subjects/{subjectId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
    }
    
    // Top-level Flashcards collection
    // Admins can read all flashcards
    match /flashcards/{flashcardId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
    }
    
    // Top-level Study sessions collection
    // Admins can read all study sessions
    match /study_sessions/{sessionId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
    }
    
    // Teams collection
    // Admins can read all teams
    match /teams/{teamId} {
      allow read: if isAdmin() || (isAuthenticated() && 
        (resource.data.memberIds != null && request.auth.uid in resource.data.memberIds));
      allow write: if isAuthenticated() && resource.data.ownerId == request.auth.uid;
      allow create: if isAuthenticated();
      
      // Team messages subcollection
      match /messages/{messageId} {
        allow read, write: if isAuthenticated();
      }
    }
    
    // Notifications collection
    // Admins can read all notifications
    match /notifications/{notificationId} {
      allow read: if isAdmin() || (isAuthenticated() && resource.data.userId == request.auth.uid);
      allow write: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated();
    }
    
    // Gamification/achievements collection (top-level)
    match /achievements/{achievementId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
    
    // User achievements
    // Admins can read all user achievements
    match /user_achievements/{docId} {
      allow read: if isAdmin() || (isAuthenticated() && resource.data.userId == request.auth.uid);
      allow write: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
    }
    
    // Pomodoro sessions
    // Admins can read all pomodoro sessions
    match /pomodoro_sessions/{sessionId} {
      allow read: if isAdmin() || (isAuthenticated() && resource.data.userId == request.auth.uid);
      allow write: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
    }
    
    // Analytics data
    // Admins can read all analytics
    match /analytics/{docId} {
      allow read: if isAdmin() || (isAuthenticated() && resource.data.userId == request.auth.uid);
      allow write: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
    }
    
    // Schedules collection
    // Admins can read all schedules
    match /schedules/{scheduleId} {
      allow read: if isAdmin() || (isAuthenticated() && resource.data.userId == request.auth.uid);
      allow write: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
    }
    
    // Feedback collection - Admins can read and write
    match /feedback/{feedbackId} {
      allow read: if isAdmin();
      allow write: if isAuthenticated();
      allow create: if isAuthenticated();
    }
    
    // Audit logs collection - Admins only
    match /audit_logs/{logId} {
      allow read: if isAdmin();
      allow write: if isAdmin();
      allow create: if isAdmin();
    }
  }
}
